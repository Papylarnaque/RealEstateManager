<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/create_image"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginBottom="388dp"
            android:contentDescription="@string/item_estate_picture_description"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintBottom_toTopOf="@+id/create_estate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/create_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Type: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_image"
            tools:text="Type: "
            tools:textColor="@color/black"
            tools:textSize="15sp"
            tools:textStyle="bold" />

        <CheckBox
            android:id="@+id/create_type_first_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="Flat"
            app:layout_constraintStart_toEndOf="@+id/create_type_text"
            app:layout_constraintTop_toTopOf="@+id/create_type_text" />

        <CheckBox
            android:id="@+id/create_type_second_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="House"
            app:layout_constraintStart_toEndOf="@+id/create_type_first_checkBox"
            app:layout_constraintTop_toTopOf="@+id/create_type_text"

            />

        <TextView
            android:id="@+id/output"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="top|start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_type_second_checkBox" />

        <Button
            android:id="@+id/create_estate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:text="CREATE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>