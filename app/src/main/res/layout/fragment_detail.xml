<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="estate"
            type="com.openclassrooms.realestatemanager.database.Estate" />
    </data>

    <ScrollView
        android:id="@+id/detail_estate_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!--    TITLE    -->

            <TextView
                android:id="@+id/detail_title_type_text"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@{@string/item_estate_first_line_text(estate.estateType.toString())}"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="HOUSE" />

            <TextView
                android:id="@+id/detail_title_surface_text"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@{@string/detail_estate_title_surface_text(Integer.toString(estate.estateSurface))}"
                app:layout_constraintBottom_toBottomOf="@id/detail_title_type_text"
                app:layout_constraintStart_toEndOf="@+id/detail_title_type_text"
                app:layout_constraintTop_toTopOf="@id/detail_title_type_text"
                tools:text="250 m²" />

            <!--    PICTURES    -->

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_estate_picture_height"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_title_type_text">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_estate_pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:listitem="@layout/item_estate_pictures" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/detail_description_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/detail_description_title_text"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                tools:text="Description:" />

            <TextView
                android:id="@+id/detail_description_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@{estate.estateDescription}"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_description_title_text"
                tools:text="@string/lorem_ipsum" />

            <!--///////// Price /////////-->

            <ImageView
                android:id="@+id/detail_price_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_money_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_description_content_text"
                tools:srcCompat="@drawable/ic_baseline_money_24" />

            <TextView
                android:id="@+id/detail_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/detail_price_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_price_image"
                app:layout_constraintTop_toTopOf="@id/detail_price_image"
                tools:text="Price:" />

            <TextView
                android:id="@+id/detail_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@{@string/detail_estate_price_text(Integer.toString(estate.estatePrice))}"
                app:layout_constraintStart_toEndOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@id/detail_price_title"
                tools:text="1.000.000 €" />

            <!--///////// Surface /////////-->

            <ImageView
                android:id="@+id/detail_surface_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_surface_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_price_content"
                tools:srcCompat="@drawable/ic_baseline_surface_24" />

            <TextView
                android:id="@+id/detail_surface_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/detail_surface_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_surface_image"
                app:layout_constraintTop_toTopOf="@id/detail_surface_image"
                tools:text="Surface:" />

            <TextView
                android:id="@+id/detail_surface_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@{@string/detail_estate_title_surface_text(Integer.toString(estate.estateSurface))}"
                app:layout_constraintStart_toEndOf="@id/detail_surface_image"
                app:layout_constraintTop_toBottomOf="@id/detail_surface_title"
                tools:text="300 m²" />

            <!--///////// Rooms /////////-->

            <ImageView
                android:id="@+id/detail_rooms_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/detail_rooms_image_description"
                android:src="@drawable/ic_baseline_rooms_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_surface_content"
                tools:srcCompat="@drawable/ic_baseline_rooms_24" />

            <TextView
                android:id="@+id/detail_rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@{@string/detail_estate_rooms_text(Integer.toString(estate.estateRooms))}"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_rooms_image"
                app:layout_constraintTop_toTopOf="@id/detail_rooms_image"
                tools:text="5 rooms" />

            <!--///////// Address /////////-->

            <ImageView
                android:id="@+id/detail_address_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_address_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_rooms_text"
                tools:srcCompat="@drawable/ic_baseline_address_24" />

            <TextView
                android:id="@+id/detail_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/detail_address_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_address_image"
                app:layout_constraintTop_toTopOf="@id/detail_address_image"
                tools:text="Address:" />

            <TextView
                android:id="@+id/detail_address_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@{@string/detail_estate_address_text(estate.estateStreetNumber, estate.estateStreet, estate.estateCityPostalCode, estate.estateCity)}"
                app:layout_constraintStart_toEndOf="@id/detail_address_image"
                app:layout_constraintTop_toBottomOf="@id/detail_address_title"
                tools:text="rue des As, Nantes" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>