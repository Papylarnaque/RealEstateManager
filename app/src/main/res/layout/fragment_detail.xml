<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="detailedEstate"
            type="com.openclassrooms.realestatemanager.database.model.DetailedEstate" />
    </data>

    <ScrollView
        android:id="@+id/detail_estate_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small">

            <!--    TITLE    -->
            <TextView
                android:id="@+id/detail_title_type_text"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingStart="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:text="@{detailedEstate.type.typeName}"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="HOUSE" />

            <TextView
                android:id="@+id/detail_title_surface_text"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_normal"
                android:paddingEnd="@dimen/margin_normal"
                android:text='@{detailedEstate.estate.estateSurface==null ? "" : @string/detail_estate_title_surface_text(Integer.toString(detailedEstate.estate.estateSurface))}'
                app:layout_constraintBottom_toBottomOf="@id/detail_title_type_text"
                app:layout_constraintStart_toEndOf="@+id/detail_title_type_text"
                app:layout_constraintTop_toTopOf="@id/detail_title_type_text"
                tools:text="250 m²" />

            <!--    PICTURES    -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailRecyclerviewPictures"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_title_type_text"
                tools:listitem="@layout/item_detail_estate_pictures" />

            <TextView
                android:id="@+id/detail_description_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/detail_description_title_text"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailRecyclerviewPictures"
                tools:text="Description:" />

            <TextView
                android:id="@+id/detail_description_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@{detailedEstate.estate.estateDescription}"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_description_title_text"
                tools:text="@string/lorem_ipsum" />

            <!--///////// Price /////////-->

            <ImageView
                android:id="@+id/detail_price_image"
                android:layout_width="@dimen/detail_content_image"
                android:layout_height="@dimen/detail_content_image"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_money_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_description_content_text"
                tools:srcCompat="@drawable/ic_baseline_money_24" />

            <TextView
                android:id="@+id/detail_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/detail_price_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_price_image"
                app:layout_constraintTop_toTopOf="@id/detail_price_image"
                tools:text="Price:" />

            <TextView
                android:id="@+id/detail_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text='@{detailedEstate.estate.estatePrice== null ? "" : @string/detail_estate_price_text(Integer.toString(detailedEstate.estate.estatePrice)) }'
                app:layout_constraintStart_toEndOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@id/detail_price_title"
                tools:text="1.000.000 $" />

            <!--///////// Surface /////////-->

            <ImageView
                android:id="@+id/detail_surface_image"
                android:layout_width="@dimen/detail_content_image"
                android:layout_height="@dimen/detail_content_image"
                android:layout_marginTop="@dimen/margin_normal"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_surface_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_price_content"
                tools:srcCompat="@drawable/ic_baseline_surface_24" />

            <TextView
                android:id="@+id/detail_surface_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/detail_surface_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_surface_image"
                app:layout_constraintTop_toTopOf="@id/detail_surface_image"
                tools:text="Surface:" />

            <TextView
                android:id="@+id/detail_surface_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text='@{detailedEstate.estate.estateSurface==null ? "" : @string/detail_estate_title_surface_text(Integer.toString(detailedEstate.estate.estateSurface))}'
                app:layout_constraintStart_toEndOf="@id/detail_surface_image"
                app:layout_constraintTop_toBottomOf="@id/detail_surface_title"
                tools:text="250 m²" />

            <!--///////// Rooms /////////-->

            <ImageView
                android:id="@+id/detail_rooms_image"
                android:layout_width="@dimen/detail_content_image"
                android:layout_height="@dimen/detail_content_image"
                android:layout_marginTop="@dimen/margin_normal"
                android:contentDescription="@string/detail_rooms_image_description"
                android:src="@drawable/ic_baseline_rooms_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_surface_content"
                tools:srcCompat="@drawable/ic_baseline_rooms_24" />

            <TextView
                android:id="@+id/detail_rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@{@string/detail_estate_rooms_text(Integer.toString(detailedEstate.estate.estateRooms))}"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_rooms_image"
                app:layout_constraintTop_toTopOf="@id/detail_rooms_image"
                tools:text="5 rooms" />

            <!--///////// Address /////////-->

            <ImageView
                android:id="@+id/detail_address_image"
                android:layout_width="@dimen/detail_content_image"
                android:layout_height="@dimen/detail_content_image"
                android:layout_marginTop="@dimen/margin_large"
                android:contentDescription="@string/detail_surface_image_description"
                android:src="@drawable/ic_baseline_address_24"
                app:layout_constraintStart_toStartOf="@id/detail_price_image"
                app:layout_constraintTop_toBottomOf="@+id/detail_rooms_text"
                tools:srcCompat="@drawable/ic_baseline_address_24" />

            <TextView
                android:id="@+id/detail_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="@string/detail_address_title"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_address_image"
                app:layout_constraintTop_toTopOf="@id/detail_address_image"
                tools:text="Address:" />

            <!--    ADDRESS        -->

            <TextView
                android:id="@+id/detail_address_streetnumber_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text='@{detailedEstate.estate.estateStreetNumber==null ? "" : @string/detail_estate_address_streetnumber(detailedEstate.estate.estateStreetNumber)}'
                app:layout_constraintStart_toEndOf="@id/detail_address_image"
                app:layout_constraintTop_toBottomOf="@id/detail_address_title"
                tools:text="10, " />

            <TextView
                android:id="@+id/detail_address_street_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{detailedEstate.estate.estateStreet}"
                app:layout_constraintStart_toEndOf="@id/detail_address_streetnumber_content"
                app:layout_constraintTop_toBottomOf="@id/detail_address_title"
                tools:text="rue des As" />

            <TextView
                android:id="@+id/detail_address_postalcode_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{detailedEstate.estate.estateCityPostalCode==null? "" : @string/detail_estate_address_postalcode(detailedEstate.estate.estateCityPostalCode)}'
                app:layout_constraintStart_toStartOf="@id/detail_address_streetnumber_content"
                app:layout_constraintTop_toBottomOf="@id/detail_address_streetnumber_content"
                tools:text="44000 " />

            <TextView
                android:id="@+id/detail_address_city_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{detailedEstate.estate.estateCity}"
                app:layout_constraintStart_toEndOf="@id/detail_address_postalcode_content"
                app:layout_constraintTop_toBottomOf="@id/detail_address_streetnumber_content"
                tools:text="Nantes" />

            <ImageView
                android:id="@+id/estate_sold_tag"
                android:layout_width="@dimen/item_estate_height"
                android:layout_height="@dimen/item_estate_height"
                android:contentDescription="@string/sold_tag_description"
                android:src="@drawable/sold"
                android:visibility="@{detailedEstate.estate.endTime!=null? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--///////// Rooms /////////-->

            <TextView
                android:id="@+id/detail_employee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_normal"
                android:drawablePadding="@dimen/margin_normal"
                android:text="@{@string/detail_employee_text(detailedEstate.employee.employeeFirstName, detailedEstate.employee.employeeLastName)}"
                android:textAlignment="center"
                app:drawableLeftCompat="@drawable/ic_baseline_person_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_address_city_content"
                tools:text="Estate managed by \nEtienne DESCAMPS" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</layout>